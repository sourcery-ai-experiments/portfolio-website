<header class="header">
  <a href="/" class="logo">
    <img src="https://cdn.evickastudio.de/static/media/logo.svg" alt="EvickaStudio Logo" />
  </a>
  <nav>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/projects">Projects</a></li>
      <li><a href="/contact">Contact</a></li>
    </ul>
  </nav>
  <button id="theme-toggle">Toggle Theme</button>
</header>
<style>
  .header {
    position: sticky;
    top: 0;
    width: 100%;
    padding: 0.5rem 1rem;
    background: rgba(35, 38, 45, 0.6); /* Semi-transparent background */
    backdrop-filter: blur(10px); /* Frosted glass effect */
    color: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 1000;
  }
  .logo img {
    height: 30px; /* Smaller logo */
    margin-right: 1rem;
  }
  .header nav ul {
    list-style: none;
    display: flex;
    gap: 1rem;
  }
  .header nav ul li a {
    color: white;
    text-decoration: none;
  }
</style>
